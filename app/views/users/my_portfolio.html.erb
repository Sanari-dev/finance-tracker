<h1>My Portfolio</h1>
<div class="search-area">
  <h3>Search stocks</h3>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 pr-0">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-large no-right-rounded" %>
      </div>
      <div class="col-sm-3 pl-0">
        <%= button_tag type: :submit, class: "btn btn-success no-left-rounded" do %>
          <%= fa_icon 'search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<%= render 'users/result' %>
<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% end %>